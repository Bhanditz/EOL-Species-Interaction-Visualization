	<h3><a href="#">Add Ecosystem</a></h3>
	<div>
	    <%= form_for @ecosystem,:name=>:ecosystem, :remote => true, :url => "/ecosystems.json", :method=>"post", :html => {:id=>"ecosystems_ajax_form"} do |f| %>
        <p><%= f.label(:name, "Name") %><%= f.text_field :name, :size=>"60", :maxlength=>"500" %></p>
