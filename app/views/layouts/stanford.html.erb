  <style type="text/css">
  #info p{
  	margin:0;
  	padding:0;
  	font-size:12px;
  }
  #info h2{
  	font-size:10px;
  	text-transform:uppercase;
  	margin:0;
  	padding:0 0 5px 0;
  	font-weight:normal;
  }

  #info{
  	right:0;
  	padding:10px;
  	float:left;
  }

  #info h3{
  	font-size:16px;
  	margin:0;
  	padding:0 0 5px 0;
  }

  #info h4{
  	font-size:14px;
  	margin:0;
  	padding:0 0 10px 0;
  	font-weight:normal;
  }

  #info img{
  	margin:10px 0 20px 0;
  	width:200px;
  }

  #killdiv{
  	display:none;
  }

  #layoutOptions h3{
  	font-size:10px;
  	text-transform:uppercase;
  	margin:0;
  	padding:0 0 5px 0;
  	font-weight:normal;
  }
  input{
  	width:100%;
  	margin-bottom:0.2em;
  }
  #layoutOptions {
  	width:120px;
  	float:right;
  }
  #layoutOptions input[type="button"] {
  	width:120px;
  	margin-bottom:0.2em;
  	font-size:10px;
